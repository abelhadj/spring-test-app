<?xml version='1.0' encoding='UTF-8'?>

	<!--
		=========== JSF CONFIGURATION FILE ==================================
	-->

<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>

		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

		<locale-config>
			<default-locale>ru</default-locale>
			<supported-locale>ru</supported-locale>
		</locale-config>

		<message-bundle>com.belcargo.i18n.resources</message-bundle>

        <resource-bundle>
            <base-name>com.belcargo.i18n.Text</base-name>
            <var>msg</var>
        </resource-bundle>

	</application>
	
    <lifecycle>
        <phase-listener>com.belcargo.utils.RedirectListener</phase-listener>
        <!-- 
        <phase-listener>com.belcargo.utils.MultiPageMessagesSupport</phase-listener>
 -->
   	</lifecycle>
    <factory>
        <exception-handler-factory>
            com.belcargo.utils.LoggingExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    
	<converter>  
		<converter-id>DateTimeConverter</converter-id>  
		<converter-class>  
			com.belcargo.utils.DateTimeConverter  
		</converter-class>  
	</converter>  

</faces-config>
